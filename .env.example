# Example Environment Configuration
# Copy this file to .env.local and update values as needed

# API Configuration
VITE_API_URL=http://localhost:8001/api/v1
VITE_APP_NAME=CivicPulse
VITE_APP_VERSION=1.0.0

# Environment
VITE_ENV=development

# WebSocket Configuration
VITE_WEBSOCKET_ENABLED=true
VITE_WEBSOCKET_MODE=enabled
VITE_WEBSOCKET_URL=ws://localhost:8001/ws
VITE_WEBSOCKET_TIMEOUT=30000
VITE_WEBSOCKET_MAX_RETRIES=3
VITE_WEBSOCKET_RECONNECT_INTERVAL=5000

# Polling Configuration (used when WebSocket is disabled)
VITE_POLLING_INTERVAL=10000
VITE_ANALYTICS_POLLING_INTERVAL=30000

# Feature Flags
VITE_WEBSOCKET_SEARCH_ENABLED=true
VITE_WEBSOCKET_ANALYTICS_ENABLED=true
VITE_WEBSOCKET_NOTIFICATIONS_ENABLED=true

# Development Features
VITE_ENABLE_DEBUG=true
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_CONSOLE_LOGS=true
VITE_SHOW_PERFORMANCE_METRICS=false

# UI Settings
VITE_AUTO_REFRESH=true
VITE_ENABLE_ANIMATIONS=true

# Optional: External Services (for development testing)
# VITE_ANALYTICS_ID=
# VITE_SENTRY_DSN=
